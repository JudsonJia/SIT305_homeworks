<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:elevation="25dp"
        android:background="@drawable/title_ai"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:src="@drawable/social_leaderboard"
            android:contentDescription="@string/image_ai" />


        <TextView
            style="@style/content_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"
            android:text="@string/generated_by_ai" />


    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
    <TextView
        android:id="@+id/congratulation"
        style="@style/myAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/your_result" />

    <TextView
        android:id="@+id/score"
        style="@style/content_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/show_score" />

    <TextView
        android:id="@+id/show_score"
        style="@style/content_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp" />
    </LinearLayout>
    <!-- Section for displaying questions and answers -->

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:elevation="25dp"
        android:background="@drawable/result_layout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/question_1"
            style="@style/content_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Question 1" />

        <TextView
            android:id="@+id/answer_1"
            style="@style/content_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Answer 1" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:elevation="25dp"
        android:background="@drawable/result_layout"
        android:orientation="vertical">

        <!-- Add TextViews for displaying questions and answers here -->
        <TextView
            android:id="@+id/question_2"
            style="@style/content_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Question 1" />

        <TextView
            android:id="@+id/answer_2"
            style="@style/content_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Answer 1" />

        <!-- Add more TextViews for additional questions and answers -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:elevation="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/result_layout"
        android:orientation="vertical">

        <!-- Add TextViews for displaying questions and answers here -->
        <TextView
            android:id="@+id/question_3"
            style="@style/content_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Question 1" />

        <TextView
            android:id="@+id/answer_3"
            style="@style/content_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Answer 1" />

        <!-- Add more TextViews for additional questions and answers -->
    </LinearLayout>

    <Button
        android:id="@+id/restart"
        style="@style/ButtonStyle"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:text="@string/take_new_quiz" />

    <Button
        android:id="@+id/MyAccount"
        style="@style/ButtonStyle"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="@string/my_account" />

</LinearLayout>